.window
  width 600px
  height 300px
  border 1px solid black
  overflow hidden
  position relative
  margin 10px auto
  .train
    width 3000px
    height 300px
    display flex
    position absolute
    left 0
    top 0
    transition all 2s
    .block
      width 600px
      height 300px
      text-align center
      font-size 24px

.slider
    position relative
    margin 0 auto
    width 600px
    button
      position absolute
      top 140px


.left
    left -50px


.right
    right -60px


.window
  .train
    .y
      background yellow
    .g
      background green
    .r
      background red


.textmain
    text-align center
    color #4F4F4F
    margin 30px 0

.image
  background url('./kiwi.svg') no-repeat
  width 612px
  height 502px
