}

@media (max-width:992px) {
    .portfolio .container-fluid{
        position: relative;
    }

    .portfolio .main-nav-trigger{
        display: block;
        color: #515f67;
        margin-top: -6px;
    }

    /*header .logo{*/
    /*margin: 62px 0;*/
    /*}*/

    .portfolio nav{
        display: none;
        margin: 0;
        position: absolute;
        top: 140px;
        left: 0;
        width: 100%;
        background-color: #48525a;
        z-index: 100;
    }

    .portfolio nav li{
        display: block;
        margin: 0;
        text-align: center;
        border-bottom: 1px solid #56626c;
        float: none !important;
    }

    .portfolio nav li:last-of-type{
        border-bottom: none;
    }

    .portfolio nav a{
        display: inline-block;
        padding: 20px 30px;
        color: #ffffff;
        cursor: pointer;
    }

    .portfolio nav a:hover{
        color: #4bcaff;
        border-color: transparent;
    }

    .portfolio nav a:active{
        background-color: transparent;
    }

}

