/*-------------- PORTFOLIO ------------------------------------------------------*/

.portfolio{
    position: relative;
}

.portfolio>section.container{
    margin: 77px auto 46px;
}

.portfolio .stn-heading{
    color: #515f67;
}

.portfolio .stn-heading:after{
    background-color: #515f67;
}

.portfolio .stn-heading{
    display: inline-block;
    margin-bottom: 80px;
}

.portfolio nav{
    float: right;
    margin-top: 10px;
    display: flex;
}

.portfolio nav li{
    list-style-type: none;
    display: inline-block;
    margin-right: 8px;
}

.portfolio nav li:last-of-type{
    margin-right: 0;
}

.portfolio nav a{
    transition: border-color 1s, color 0.3s;
    padding: 6px 16px;
    color: #515f67;
    font-family: "Segoe UI Bold";
    border: 2px solid transparent;
    text-transform: uppercase;
    cursor: pointer;
}

.portfolio nav a:focus{
    color: #515f67;
    text-decoration: none;
}

.portfolio nav a:hover{
    color: #4bcaff;
    border-color: #4bcaff;
    text-decoration: none;
}

.portfolio .thumbs-row{
    min-height: calc(270px + 270px + 32px);
}

.portfolio .thumbs-row>[class^="col-"]{
    margin-bottom: 32px;
}

.portfolio .thumbs-row a{
    display: block;
    position: relative;
    height: 270px;
    background-color: #979797;
    opacity: 0.8;
}

.portfolio .thumbs-row a:after{
    content: "+";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font: 72px "Segoe UI Light";
    color: #ffffff;
    text-align: center;
    text-decoration: none;
    opacity: 0;
    line-height: 1;
    transition: all 0.3s ease-in-out;
}

.portfolio .thumbs-row a:hover:after{
    display: block;
    background: rgb(53,61,71);
    line-height: calc( 270 / 72 );
    opacity: 0.7;
}

.portfolio .thumbs-row a:hover{
    text-decoration: none;
}

.portfolio .thumbs-row .thumb-1{
    background: url("../../images/portfolio/1.png") 50% 50% no-repeat;
    background-size: cover;
}

